# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET     /                           controllers.Application.index()
GET     /                           controllers.Assets.at(path="/public", file="index.html")
GET     /index.html                           controllers.Assets.at(path="/public", file="index.html")
GET     /about.html                           controllers.Assets.at(path="/public", file="about.html")
GET     /contact.html                         controllers.Assets.at(path="/public", file="contact.html")
GET     /harmonize/*progression     controllers.Application.harmonize(progression :String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
