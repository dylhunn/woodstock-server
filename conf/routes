# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET     /                           controllers.Application.index()
GET     /                           controllers.Assets.at(path="/public", file="harmonize.html")
GET     /index.html                           controllers.Assets.at(path="/public", file="harmonize.html")
GET     /index                           controllers.Assets.at(path="/public", file="harmonize.html")

GET     /harmonize                           controllers.Assets.at(path="/public", file="harmonize.html")
GET     /about                          controllers.Application.about()
GET     /contact                         controllers.Application.contact()
GET     /harmonize/*progression     controllers.Application.harmonize(progression :String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
